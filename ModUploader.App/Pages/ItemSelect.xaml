<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ModUploader.Pages.ItemSelect"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModUploader.Pages"
    xmlns:local2="using:ModUploader"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:res="using:ModUploader.Resources"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{x:Bind res:Resources.Select_Title, Mode=OneWay}"
               FontSize="24"
               FontWeight="SemiBold"
               Margin="0,0,0,10"
               Grid.Row="0"/>


        <Grid Grid.Row="1" Margin="0,0,0,10">
            <TextBox x:Name="SearchBox"
             PlaceholderText="{x:Bind res:Resources.Select_SearchBox, Mode=OneWay}"
             TextChanged="SearchBox_TextChanged"
             HorizontalAlignment="Stretch"/>
        </Grid>

        <Grid Grid.Row="2">
            <ListView x:Name="ListView"
              ItemClick="ModListView_ItemClick"
              IsItemClickEnabled="True">

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local2:ItemInfo">
                        <Grid Padding="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Width="70"
                                Height="70"
                                Background="Black">
                                <Image Stretch="Uniform">
                                    <Image.Source>
                                        <BitmapImage UriSource="{x:Bind PreviewImageUrl, Mode=OneWay}"/>
                                    </Image.Source>
                                </Image>
                            </Border>
                            
                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind Name}"
                           FontSize="18"
                           FontWeight="Bold"/>
                                <TextBlock Text="{x:Bind PublishedFileId}"
                           FontSize="14"
                           Foreground="Gray"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ProgressRing x:Name="LoadingRing"
                  Width="100"
                  Height="100"
                  IsActive="True"
                  Visibility="Visible"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"/>
            <StackPanel Orientation="Vertical" Spacing="5" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="ListViewText"
                    Visibility="Collapsed"
                    FontSize="14"
                    HorizontalAlignment="Center"/>
                    <Button x:Name="BtnRetry" Click="BtnRetry_Click" HorizontalAlignment="Center" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <SymbolIcon Symbol="Refresh"/>
                        <TextBlock Text="{x:Bind res:Resources.Retry, Mode=OneWay}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
